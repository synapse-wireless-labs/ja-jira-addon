{
  "key": "ja-report-addon",
  "name": "Agile Report Add-on",
  "description": "Provide helpful macros for reporting on Agile projects",
  "vendor": {
    "name": "Synapse Wireless Labs",
    "url": "http://www.synapse-wireless.com/"
  },
  "baseUrl": "{{localBaseUrl}}",
  "links": {
    "self": "{{localBaseUrl}}/atlassian-connect.json",
    "homepage": "{{localBaseUrl}}/atlassian-connect.json"
  },
  "authentication": {
    "type": "jwt"
  },
  "lifecycle": {
    // atlassian-connect-express expects this route to be configured to manage the installation handshake
    "installed": "/installed"
  },
  "scopes": [
    "READ",
    "WRITE"
  ],
  "modules": {
  "jiraDashboardItems": [
    {
                "name" : {
                    "value" : "Issues in project",
                    "i18n" : "issues.in.project.i18n"
                },
                "url" : "/epic-dashboard?dashboard={dashboard.id}&dashboardItem={dashboardItem.id}",
                "key" : "iframe-requests",
                "description" : {
                    "value" : "Issues in project dashboard item",
                    "i18n" : "issues.in.project.description.i18n"
                },

                "thumbnailUrl": "http://content.sportslogos.net/logos/32/755/full/hyoflhueqc3u3whapwey2gjnj.png",
                "configurable" : true,
                "conditions" : [{
                        "condition": "/condition?view={dashboardItem.viewType}&dashboard={dashboard.id}&dashboardItem={dashboardItem.id}"
                }]
    }]
  }
}

