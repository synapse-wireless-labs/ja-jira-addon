{
  "key": "ja-report-addon",
  "name": "Agile Reporting Add-on",
  "description": "Provide helpful macros for reporting on Agile projects",
  "vendor": {
    "name": "Synapse Wireless Labs",
    "url": "http://www.synapse-wireless.com/"
  },
  "baseUrl": "{{localBaseUrl}}",
  "links": {
    "self": "{{localBaseUrl}}/atlassian-connect.json",
    "homepage": "{{localBaseUrl}}/atlassian-connect.json"
  },
  "authentication": {
    "type": "jwt"
  },
  "lifecycle": {
    "installed": "/installed",
    "enabled": "/enabled"
  },
  "scopes": [
    "READ",
    "WRITE"
  ],
  "modules": {
    "jiraDashboardItems": [
      {
        "name": {
          "value": "Epic Release Report"
        },
        "url": "/epic-dashboard?dashboard={dashboard.id}&dashboardItem={dashboardItem.id}",
        "key": "iframe-requests",
        "description": {
          "value": "For a given Project and Version, displays a bar chart of each Epic's progress, sorted by Rank."
        },
        "thumbnailUrl": "{{localBaseUrl}}/Thumbnail.PNG",
        "configurable": true
      }
    ],
    "jiraIssueFields": [
      {
        "key" : "epic-risk-level-field",
        "name" : {
            "value" : "Epic Risk Level"
        },
        "description" : {
            "value" : "For Epic Release Report Dashboard widget - is this Epic at risk for this release?"
        },
        "type": "single_select",
        "extractions": [{
            "path": "category",
            "type": "string",
            "name": "category"
        }]
      },
      {
        "key" : "epic-risk-description-field",
        "name" : {
            "value" : "Epic Risk Description"
        },
        "description" : {
            "value" : "For Epic Release Report Dashboard widget - brief statement annotating current Epic Risk Level"
        },
        "type": "text"
      }
    ]
  }
}
